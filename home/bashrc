# put me someplace else you lazygit
boop () {
  local last="$?"
  if [[ "$last" == '0' ]]; then
      beepgood
  else
      beepbad
  fi
  $(exit "$last")
}

radio () {
    echo $1
    if [[ $1 == "lofi" ]]; then
        link="https://live.hunter.fm/lofi_low"
    elif [[ $1 == "synthwave" ]]; then
        link="https://nightride.fm/stations?station=nightride"
    else
        echo "typooo"
        exit 1
    fi
    mpv --really-quiet $link
}
